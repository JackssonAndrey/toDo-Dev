<%- include('../layouts/page') %>
<%- include('../layouts/menuTop') %>

<div class="row h-100">
  <%- include('../layouts/menu') %>
  <div class="col-sm-10 pb-5">
    <div class="container-fluid border mt-4 h-100 p-3">
      <div class="row mb-3">
        <div class="col-sm-12 text-center">
          <h1 class="text-center">All your Projects</h1>
        </div>
      </div>
      <%- include('../layouts/messages') %>
      <div class="container col-sm-11 m-auto">
        <div class="row">
          <span class="badge badge-primary">Open</span>
        </div>
        <div class="row mt-4">
          <% projectsOpen.forEach(project => { %>
            <div class="col-sm-4">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-10">
                      <h5 class="card-title"><%= project.title %></h5>
                      <p class="card-text"><%= project.description %> </p>
                    </div>
                    <div class="col-sm-2">
                      <i class="fa fa-circle"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <div class="row mt-4">
          <span class="badge badge-primary">Completed</span>
        </div>
        <div class="row mt-4">
          <% projectsCompleted.forEach(project => { %>
            <div class="col-sm-4">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-10">
                      <h5 class="card-title"><%= project.title %></h5>
                      <p class="card-text"><%= project.description %> </p>
                    </div>
                    <div class="col-sm-2">
                      <i class="fa fa-circle"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
      <div class="div-btn-actions">
        <a href="/projects/create">
        <button type="button" class="btn btn-primary btn-actions">
          <i class="fa fa-plus"></i>
        </button>
        </a>
      </div>
    </div>
  </div>
</div>
<script src="/js/app.js"></script>
