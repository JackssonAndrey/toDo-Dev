<%- include('../layouts/page') %>
<%- include('../layouts/menuTop') %>

<div class="row h-100">
  <%- include('../layouts/menu') %>
  <div class="col-sm-10 h-100">
    <div class="container-fluid border mt-4 h-100 p-3">
      <div class="row mb-3">
        <div class="col-sm-12 text-center">
          <h1 class="text-center">Edit account</h1>
        </div>
      </div>
      <div class="row mt-5">
        <div class="card col-sm-5 m-auto p-3 border">
          <div class="row mt-3">
            <a href="javascript:history.back()" class="ml-3">
              <i class="fa fa-chevron-left icon-btn"></i>
            </a>
          </div>
          <div class="card-body">
            <form action="/user/update" method="POST">
              <div class="form-group row mt-4 ml-3">
                <label for="name" class="mt-2 mr-3 col-form-label text-primary"><i class="fa fa-user"></i></label>
                <div class="label-float">
                  <input type="text" name="name" id="name" placeholder=" " value="<%= user.name %>">
                  <label>Name</label>
                </div>
              </div>
              <div class="form-group row mt-3 ml-3">
                <label for="username" class="mt-2 mr-3 col-form-label text-primary"><i class="fa fa-at"></i></label>
                <div class="label-float">
                  <input type="text" name="username" id="username" placeholder=" " value="<%= user.username %>">
                  <label>Username</label>
                </div>
              </div>
              <div class="form-group row mt-3 ml-3">
                <label for="email" class="mt-2 mr-3 col-form-label text-primary"><i class="fa fa-envelope-square"></i></label>
                <div class="label-float">
                  <input type="text" name="email" id="email" placeholder=" " value="<%= user.email %>">
                  <label>E-mail</label>
                </div>
              </div>
              <div class="form-group row mt-3 ml-3">
                <label for="bio" class="mt-2 mr-3 col-form-label text-primary"><i class="fa fa-id-card-o"></i></label>
                <div class="label-float">
                  <textarea name="bio" id="bio" cols="30" rows="3" placeholder=" " ><%= user.bio %></textarea>
                  <label>Bio</label>
                </div>
              </div>
              <div class="form-row mt-4">
                <div class="form-group col-sm-12">
                  <button type="submit" class="btn btn-block btn-primary" id="btn-login">
                    Save <i class="fa fa-check ml-2"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
